doctype html
html(lang='en')
  head
    // Required meta tags
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    // Bootstrap CSS
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/sticky-footer-navbar.css', rel='stylesheet')
    title Andrew Zhou's Personal Blog
  body
    img.rounded.mx-auto.d-block(src='images/stars.jpg', height='350', width='1400')
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-5.fixed-top
      .container
        a.navbar-brand Andrew Zhou's Personal Blog
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavDropdown', aria-controls='navbarNavDropdown', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNavDropdown.collapse.navbar-collapse.justify-content-end
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='https://andrewzhou.herokuapp.com') Home
            li.nav-item
              a.nav-link(href='/about') About
            li.nav-item
              a.nav-link(href='/contact') Contact
        form.form-inline
          input.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
          button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
    // start content
    .container
      .row.mb-1
          // side bar
          .col-xs-2.col-lg-2
          .col-xs-6.col-lg-6
            each blog in content
              .mb-6
                - var ref = '/blog/' + blog.id
                a(href=ref)
                  h1 #{blog.title}
                h3 #{blog.description}
                div
                  ul.navbar-nav.d-inline
                    li.nav-item.d-inline.mr-4
                      h3.d-inline #{blog.author}
                    li.nav-item.d-inline.mr-4
                      h3.d-inline #{blog.date}
